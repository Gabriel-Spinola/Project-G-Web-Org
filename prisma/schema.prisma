model VerificationToken {
  id         Int      @id @default(autoincrement())
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Comment {
  id Int @id @default(autoincrement())

  isEdited Boolean
  content  String

  createdAt DateTime @default(now())

  likes Like[] @relation("LikedComment")

  author   User   @relation("CommentAuthor", fields: [authorId], references: [id])
  authorId String

  post   Post?   @relation(fields: [postId], references: [id])
  postId String? @unique

  project   Project? @relation(fields: [projectId], references: [id])
  projectId String? 

  replies Comment[] @relation("Replies")

  parentComment Comment? @relation("Replies", fields: [parentCommentId], references: [id])
  parentCommentId Int?
}

model Like {
  id Int @id @default(autoincrement())

  user   User   @relation("LikedBy", fields: [userId], references: [id])
  userId String

  post   Post?   @relation("LikedPost", fields: [postId], references: [id])
  postId String?

  project   Project? @relation("LikedProject", fields: [projectId], references: [id])
  projectId String?

  comment   Comment? @relation("LikedComment", fields: [commentId], references: [id])
  commentId Int?
}
